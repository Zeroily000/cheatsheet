{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build main",
            "type": "shell",
            "command": "bazel build //app:main",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build pygreet",
            "type": "bazel",
            "command": "build",
            "targets": ["//modules/greet/test:test"],
            "options": [
                "--compilation_mode=dbg",
                "--copt=-O0",
                "--strip=never"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}