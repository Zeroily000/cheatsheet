{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug pygreet (gdb)",
            "preLaunchTask": "Build pygreet",
            "type": "cppdbg",
            "request": "launch",
            "sourceFileMap": {
                "/proc/self/cwd": "${workspaceFolder}/bazel-${workspaceFolderBasename}"
            },
            "program": "/usr/bin/env",
            "args": [
                "python3",
                "${workspaceFolder}/bazel-bin/modules/greet/test/test"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        },
        {
            "name": "Debug pygreet (lldb)",
            "preLaunchTask": "Build pygreet",
            "type": "lldb",
            "request": "launch",
            "sourceMap": {
                "/proc/self/cwd": "${workspaceFolder}"
            },
            "program": "/usr/bin/env",
            "args": [
                "python3",
                "${workspaceFolder}/bazel-bin/modules/greet/test/test"
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
        }
    ]
}