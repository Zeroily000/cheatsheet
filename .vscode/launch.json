{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug pygreet",
            "preLaunchTask": "Build pygreet",
            "type": "cppdbg",
            "request": "launch",
            "sourceFileMap": {
                "/proc/self/cwd": "${workspaceFolder}/bazel-${workspaceFolderBasename}"
            },
            "program": "/usr/bin/env",
            "args": ["python3", "${workspaceFolder}/bazel-bin/pybind/greet/test"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}